        android:icon="@mipmap/ic_launcher"
        android:label="@string/normal_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".bilibili.BilibiliActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".multi_select.MultiSelectActivity"/>

        <activity android:name=".normal.NormalActivity"/>

        <activity android:name=".weibo.WeiboActivity"/>

        <activity android:name=".communicate_with_binder.SimpleActivity"/>

        <activity android:name=".one2many.OneDataToManyActivity"/>

        <activity android:name=".payload.TestPayloadActivity"/>

        <!-- DataBinding Activity -->
        <activity android:name="com.camnter.multitype.databinding.sample.normal.BindingNormalActivity"/>

    </application>

</manifest>